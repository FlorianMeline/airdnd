<div>
  <%= render "teams/banner-show",team: @team %>
</div>
<div class="d-flex justify-content-evenly contain-team">
  <div class="col-5">
    <div class="d-flex justify-content-between">
    <div>
    <h1 class="name-team">⚔️ <%= @team.name%> </h1>
      <p class="align-self-end">🏰<%= @team.dungeon_type%></p>
    </div>

      <p class="align-self-end fs-5"><strong> <%= @team.success_rate%></strong> /5  🔥</p>
    </div>
    <p class="description-of-the-team"><%= @team.description%></p>
    <div class="d-flex">
        <%=cl_image_tag @team.owner.avatar.key, class: "team-owner"%>
        <div class="align-self-end ps-4">
          <h4><strong><%=@team.owner.name%></strong></h4>
          <p>Entraineur et propriétaire de l'équipe </p>
        </div>
    </div>
  </div>
  <div class="col-4">
    <%= render "teams/reservation-card"%>
  </div>
</div>
