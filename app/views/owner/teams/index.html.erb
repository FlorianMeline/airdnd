<div class="container">
  <div class="border-user-teams"><h1>Mes équipes</h1></div>
  <div class="card-user-teams mt-4">
    <% @user_teams.each do |user_team|%>
      <% if user_team.photo.attached? %>
        <%= link_to team_path(user_team), style:"text-decoration: none" do%>
          <div class="card card-user-team" style="width: 400px;">
            <%= cl_image_tag user_team.photo.key, class: "card-img-top user-team-image"  %>
            <div class="card-body">
              <h2 class="card-title">⚔️ <%= user_team.name %></h2>
              <p class="card-text">🔥 <%= user_team.success_rate %> / 5</p>
              <p class="card-text">🏰 <%= user_team.dungeon_type %></p>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
